<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Border: a stroke around the rectangle -->
    <item android:id="@+id/decoration">
        <shape
            android:shape="rectangle">
            <stroke
                android:width="5dp"
            android:color="#000000" /> <!-- Border color (black) -->
        </shape>
    </item>

    <!-- Background shape: a rectangle with rounded corners -->
    <item android:id="@android:id/background" android:top="5dp" android:left="5dp" android:right="5dp" android:bottom="5dp">
        <shape
            android:shape="rectangle">
            <solid android:color="#FFFFFF" />
            <corners android:radius="8dp" /> <!-- Rounded corners, adjust as needed -->
        </shape>
    </item>
</layer-list>

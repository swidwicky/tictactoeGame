            android:clickable="true"
            android:focusable="true"
            app:backgroundTint="@color/your_background_color"
            android:contentDescription="Tic Tac Toe Square"
            android:text=""
            android:textSize="48sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/square_11"
            app:layout_constraintStart_toEndOf="@id/square_00"
            app:layout_constraintEnd_toStartOf="@id/square_02" />

        <!-- Cell 02 -->

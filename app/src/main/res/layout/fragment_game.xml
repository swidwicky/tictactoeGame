<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.GameFragment">

    <GridLayout
        android:id="@+id/ticTacToeBoard"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:rowCount="3"
        android:columnCount="3">

        <!-- Cell 00 -->
        <RelativeLayout
            android:id="@+id/square_00"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:background="@drawable/tic_tac_toe_square_background"
            android:contentDescription="Tic Tac Toe Square">

            <!-- Add your custom content for this cell -->
            <!-- Example: ImageView for X or O symbol -->
            <ImageView
                android:id="@+id/square_00_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="center"
                android:visibility="gone" />

        </RelativeLayout>

        <!-- Cell 01 -->
        <RelativeLayout
            android:id="@+id/square_01"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:background="@drawable/tic_tac_toe_square_background"
            android:contentDescription="Tic Tac Toe Square">

            <!-- Add your custom content for this cell -->
            <!-- Example: ImageView for X or O symbol -->
            <ImageView
                android:id="@+id/square_01_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="center"
                android:visibility="gone" />

        </RelativeLayout>

        <!-- Cell 02 -->
        <RelativeLayout
            android:id="@+id/square_02"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:background="@drawable/tic_tac_toe_square_background"
            android:contentDescription="Tic Tac Toe Square">

            <!-- Add your custom content for this cell -->
            <!-- Example: ImageView for X or O symbol -->
            <ImageView
                android:id="@+id/square_02_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="center"
                android:visibility="gone" />

        </RelativeLayout>

        <!-- Repeat the above layout for other cells (e.g., square_10, square_11, etc.) -->

    </GridLayout>
</FrameLayout>

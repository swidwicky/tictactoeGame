<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.GameFragment">

    <GridLayout
        android:id="@+id/ticTacToeBoard"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:rowCount="3"
        android:columnCount="3">

        <!-- Cell 00 -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/square_00"
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            app:backgroundTint="@color/your_background_color"
            android:contentDescription="Tic Tac Toe Square"
            android:text=""
            android:textSize="48sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/square_10"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/square_01" />

        <!-- Cell 01 -->
